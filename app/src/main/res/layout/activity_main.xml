<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.programacionymas.igadgets.MainActivity">

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Hola! Tenemos estas ofertas para ti:" />

    <ImageView
        android:layout_margin="6dp"
        android:src="@drawable/bg_splash"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <Button
        android:id="@+id/btnSeeOffers"
        android:layout_gravity="center"
        android:text="Ver mÃ¡s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSkipOffers"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Omitir e ingresar a la app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
